@using Kanban.DAL

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg">
         @Html.ActionLink("Kanban", "Index", "Home", null, new { @class = "navbar-brand" })
         @Html.ActionLink("Cadastrar Atividade", "CadastrarAtividade", "Home", null, new { @class = "navbar-brand" })
    </nav>

    <div id="content" class="container" style="margin-top:30px">
        @RenderBody()
    </div>

    <hr style="margin-top:30px" />
    <footer style="text-align:center">
        <p>&copy; @DateTime.Now.Year - Desenvolvido por Ketlen Rieper</p>
    </footer>
</body>
</html>